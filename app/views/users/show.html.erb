<section id="intro" class="intro-section">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-info basic-info">
        <div class="panel-heading">
            <%= image_tag current_user.image %>
            <span><strong>@<%= link_to current_user.screen_name, "https://twitter.com/#{current_user.screen_name}" %></strong></span>
        </div>
        <div class="panel-body">
          <h4>
            <span>Following: <%= current_user.friends_count %></span>
            <span>Followers: <%= current_user.follower_count %></span>
            <span>Tweets: <%= current_user.tweet_count %></span>
          </h4>
        </div>
      </div>
    </div>
  </div>
  <div class="row create-tweet">
    <div class="col-md-6 col-md-offset-3">
      <div class="well bs-component">
        <%= form_for :tweet, url: tweets_path do |f| %>
          <fieldset>
            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Compose New Tweet</label>
              <div class="col-lg-10">
                <textarea name="tweet" class="form-control control" rows="3" id="textArea"></textarea>
              </div>
            </div>
                <%= f.submit "Tweet!", class: "btn btn-primary" %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Latest Tweets</h1>
      <% current_user.home_timeline.each do |tweet| %>
      <div class="panel panel-default">
        <div class="panel-heading">
             <%= image_tag tweet.user.profile_image_url %>
             <span><strong><%= tweet.user.name %></span></strong>
        </div>
        <div class="panel-body">
          <p><%= tweet.full_text %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>