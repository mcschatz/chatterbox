<section id="intro" class="intro-section">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
            <ul><%= image_tag current_user.image %>
            <h2><%= current_user.screen_name %></h2></ul>
        </div>
        <div class="panel-body">
          <ul><h4>
            Following: <%= current_user.friends_count %>
            Followers: <%= current_user.follower_count %>
            Tweets: <%= current_user.tweet_count %>
          </h4></ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row create-tweet">
    <div class="col-md-6 col-md-offset-3">
      <div class="well bs-component">
        <%= form_for :tweet, tweets_path, method: :post do |f| %>
          <fieldset>
            <div class="form-group">
              <label for="textArea" class="col-lg-2 control-label">Compose New Tweet</label>
              <div class="col-lg-10">
                <%= f.text_area(:tweet, class: "form-control") %>
              </div>
            </div><br>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <%= f.submit "Tweet!", class: "btn btn-primary" %>
              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Latest Tweets</h1>
      <% current_user.home_timeline.each do |tweet| %>
      <div class="panel panel-default">
        <div class="panel-body">
             <ul><%= image_tag tweet.user.profile_image_url %>
             <%= tweet.user.name %></ul>
          <p><%= tweet.full_text %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>